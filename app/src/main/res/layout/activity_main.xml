<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yona.mrpotatohead.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shoes"
            android:id="@+id/shoes"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body"
            android:id="@+id/body"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arms"
            android:id="@+id/arms"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyes"
            android:id="@+id/eyes"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mouth"
            android:id="@+id/mouth"
            android:layout_alignBottom="@id/shoes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mustache"
            android:id="@+id/mustache"
            android:layout_alignBottom="@id/nose"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nose"
            android:id="@+id/nose"
            android:layout_alignBottom="@id/mouth"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ears"
            android:id="@+id/ears"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyebrows"
            android:id="@+id/eyebrows"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/glasses"
            android:id="@+id/glasses"
            android:layout_alignTop="@id/ears"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hat"
            android:id="@+id/hat"
            android:layout_alignBottom="@id/shoes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"/>


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox_shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shoes"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox_arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="arms"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eyes"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mouth"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nose"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ears"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mustache"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eyebrows"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="glasses"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkbox_hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hat"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>




</LinearLayout>
